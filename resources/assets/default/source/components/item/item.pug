include ../button/button

mixin items(quantity)
  .item__container
    | @foreach ($items as $key => $item)
    .item(class="item--" + quantity)
      .item__sign
        p {{$item->manufactured}}
      .item__article {{$item->article}}
      .item__image
        img(src!="/images/items/{{$item->image_path}}",
        alt!="{{$item->name}}",
        title!="{{$item->name}}")
      .item__name
        a(href!="/catalog/{{$item->subcategory_plug}}/{{$item->plug}}/") {{$item->name}}
      .item__price
        p {{$item->price}}
      .item__button
        +button('Подробнее', 'button--small', '/catalog/{{$item->subcategory_plug}}/{{$item->plug}}/')
    | @endforeach

