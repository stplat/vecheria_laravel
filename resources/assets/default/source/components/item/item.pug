include ../button/button

mixin items(quantity)
  .item__container
    | @foreach ($items as $key => $item)
    .item(class="item--" + quantity)
      .item__sign
        p {{$item->manufacturer}}
      .item__article {{$item->article}}
      .item__image
        a(href!="/{{$item->slug}}")
          picture
            source(srcset!="/images/items/{{$item->slug}}-thumb.webp", data-src!="/images/items/{{$item->slug}}-thumb.webp", type="image/webp")
            img(src!="/images/items/{{$item->slug}}-thumb.jpg",
            data-src!="/images/items/{{$item->slug}}-thumb.jpg",
            alt!="{{$item->name}}",
            title!="{{$item->name}}")
      .item__name
        a(href!="/{{$item->slug}}") {{$item->name}}
      .item__price
        p {{$item->price}}
      .item__button
        +button('Подробнее', 'button--small', '/{{$item->slug}}')
    | @endforeach

mixin itemsSlider()
  .swiper-container.js-item-slider
    .swiper-wrapper
      | @foreach ($items as $key => $item)
      .swiper-slide(style="padding: 0 5px 5px 0")
        .item.item--for-slider
          .item__sign
            p {{$item->manufacturer}}
          .item__article {{$item->article}}
          .item__image
            a(href!="/{{$item->slug}}")
              picture
                source(srcset!="/images/items/{{$item->slug}}-thumb.webp", data-src!="/images/items/{{$item->slug}}-thumb.webp", type="image/webp")
                img(src!="/images/items/{{$item->slug}}-thumb.jpg",
                data-src!="/images/items/{{$item->slug}}-thumb.jpg",
                alt!="{{$item->name}}",
                title!="{{$item->name}}")
          .item__name
            a(href!="/{{$item->slug}}") {{$item->name}}
          .item__price
            p {{$item->price}}
          .item__button
            +button('Подробнее', 'button--small', '/{{$item->slug}}')
      | @endforeach
