.menu__container
  nav.container
    ul.menu
      | @foreach ($menu as $menu_items)
      li
        span.menu__plug {{$menu_items['category']}}
        ul.menu__submenu
          | @foreach ($menu_items['subcategory'] as $plug => $subcategory)
          li
            a.menu__submenu-link(href="/catalog/{{$plug}}") {{$subcategory}}
          | @endforeach
      | @endforeach